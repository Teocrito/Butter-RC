<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.ButterRC" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ButterRC</name>
    <description>
        This application allows the user to control butter whit they're phone
    </description>
    <author email="sabt961111@gmail.com" href="http://cordova.io">
        Teo Carlos SÃ¡nchez Balderas
    </author>
    <preference name="Orientation" value="portrait" />
    <feature name="http://api.phonegap.com/1.0/camera"/>
    <icon src="public/img/logo.png" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-navigation href="http://*/*" />
    <allow-navigation href="https://*/*" />
    <allow-navigation href="data:*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <icon src="public/img/logo.png" density="ldpi" />
        <icon src="public/img/logo.png" density="mdpi" />
        <icon src="public/img/logo.png" density="hdpi" />
        <icon src="public/img/logo.png" density="xhdpi" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
</platform>
</widget>
